                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.htwg.lange_nacht.gui.StrafeAnlegenActivity"
            android:label="@string/title_activity_strafe_anlegen" >
