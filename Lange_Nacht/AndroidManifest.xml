        <activity
            android:name="de.htwg.lange_nacht.gui.StrafeEintragenActivity"
            android:label="@string/title_activity_strafe_eintragen" >
        </activity>
        <activity
            android:name="de.htwg.lange_nacht.gui.SpielerAuswaehlenActivity"
            android:label="@string/title_activity_spieler_auswaehlen" >
        </activity>
        <activity
            android:name="de.htwg.lange_nacht.gui.SpielerUebersicht"
            android:label="@string/title_activity_spieler_uebersicht" >
        </activity>
    </application>

</manifest>
